<% provide(:title, @programmation.nom) %>
<h1>Evenements du Codep : <%= @programmation.nom %></h1>
<div class="row">
  <div class="span2 center">
    Identifiant
  </div>
  <div class="span2 center">
    Date
  </div>
  <div class="span2 center">
    Genre
  </div>
  <div class="span2 center">
    Nom
  </div>
  <div class="span2 center">
    Categorie
  </div>
</div>
<div class="row">
  <div class="span2 center">
    <%= @programmation.id %>
  </div>
  <div class="span2 center">
    <% if @programmation.le.blank? %>
        Permanente
    <% else %>
        <%= @programmation.le.strftime("%d/%m/%Y") %>
    <% end %>
  </div>
  <div class="span2 center">
    <%= @programmation.genre %>
  </div>
  <div class="span2 center">
    <%= @programmation.nom %>
  </div>
  <div class="span2 center">
    <%= @programmation.categorie %>
  </div>
</div>
<br/>
<div class="row">
  <div class="span12">
    <h1>Description</h1>
  </div>
</div>
<div class="row">
  <div class="span12">
    <%= @evenement.description %>
  </div>
</div>
<br/>
