<div class="row">
  <%= link_to(home_next_date) do %>
      <div class="span2">
        <b>
          <%= home_next_date.le.strftime("%d/%m/%Y") %>
        </b>
      </div>
      <div class="span1">
        <%= home_next_date.le.strftime("%T") %>
      </div>
      <div class="span1">
        <%= home_next_date.groupe %>
      </div>
      <div class="span1">
        <%= home_next_date.distance.to_s + " km" %>
      </div>
  <% end %>
  <%= link_to(home_next_date.programme) do %>
      <% if home_next_date.programme_type == "Circuit" %>
          <div class="span1">
            <b>
              <%= home_next_date.programme.nom %>
            </b>
          </div>
          <div class="span1">
            <%= home_next_date.programme.direction %>
          </div>
          <div class="span1">
            <%= home_next_date.programme.denivele.to_s + " m" %>
          </div>
          <div class="span1">
            <%= home_next_date.programme.difficulte %>
          </div>
      <% else %>
          <div class="span5">
            <b>
              <%= home_next_date.programme.nom %>
            </b>
          </div>
      <% end %>
  <% end %>
</div>
