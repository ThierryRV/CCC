<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
      </aside>
    </div>
    <div class="row">
      <aside class="span12">
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
    </div>
    <div class="row">
      <div class="span12">
        <h3>Le fil des messages</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <!-- Afficher des flash d'information -->
    <div class="row alert alert-info">
      <div class="span16">
        <%= render 'home_alert' %>
      </div>
    </div>

    <!-- Afficher les 2 carousels et le nom du site -->
    <div class="row alert alert-info">
      <div class="span4">
        <%= render 'carousel_gauche' %>
      </div>
      <div class="span3 center hero-unit cccCarouselRow">
        <h1>
          <small>Club Cyclo de Courcouronnes</small>
        </h1>
      </div>

      <div class="span4">
        <%= render 'carousel_droit' %>
      </div>
    </div>

    <!-- Afficher les 2 carousels et le nom du site -->
    <div class="row alert alert-info">
      <%= render 'home_next_10' %>
    </div>


    <%= render 'carousel_javascript' %>

<!--
    <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
-->
<% end %>